<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MCCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/yellow_500</item>
        <item name="colorSecondaryVariant">@color/yellow_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupMenu.TextAppearance</item>
        <item name="historyItemExprTextColor">@color/grey_400</item>
        <item name="historyItemDateColor">@color/yellow_500</item>
        <item name="historyItemExprResultTextColor">@color/white</item>
        <item name="historyItemBorderColor">@color/grey_700</item>
        <item name="keyboardBackgroundColor">@color/black_700</item>
    </style>

    <style
        name="PopupMenu.TextAppearance"
        parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextBtn.Large" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/yellow_500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>b
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextBtn.Medium" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/yellow_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>b
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextBtn.Large.Secondary" parent="TextBtn.Large">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextBtn.Medium.Secondary" parent="TextBtn.Medium">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>